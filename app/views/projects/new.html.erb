
<%= javascript_include_tag "plugins/peity/jquery.peity.min.js", "plugins/jquery-ui/jquery-ui.min.js", "plugins/iCheck/icheck.min.js", "demo/peity-demo.js",'jquery-ui.custom.min.js', "plugins/iCheck/icheck.min.js","inspinia.js","plugins/pace/pace.min.js", "jquery-2.1.1.js","bootstrap.min.js","plugins/metisMenu/jquery.metisMenu.js","plugins/slimscroll/jquery.slimscroll.min.js" 'data-turbolinks-track' => true %>

<div id="wrapper">
  <div class="col-lg-10">
    <h2 class= "pull-left"> Projekt Erstellen</h2>
  </div>

  <div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row" >
        <div class="ibox ">
          <div class="ibox-title">
                  Schritt f√ºr Schritt ein neues Projekt erstellen
          </div>


          <%= form_for(:project, as: :project, url: { action: 'create' }) do |f| %>
              <div class="form-group"><%= f.text_field        :project_name,             :placeholder => 'Projektname',:autofocus => true   ,:class=>'form-control'  %> </div>
              <div class="form-group"><%= f.number_field   :budget,  step: 0.01,         :placeholder => 'Budget',  :class=>'form-control'  %> </div>
              <div class="form-group"><%= f.date_field        :start_date,            :placeholder => 'Start'               ,:class=>'form-control'   %> </div>
              <div class="form-group"><%= f.date_field        :deadline,             :placeholder => 'Deadline'              ,:class=>'form-control'   %> </div>
              <div class="form-group"><%= f.text_field       :description,                 :placeholder => 'Beschreibung'         ,:class=>'form-control'   %> </div>

              <%= f.submit "Projekt erstellen", :class=>'btn btn-outline btn-primary dim pull-right' %>


          <% end %>

        </div>
    </div>
  </div>
</div>
