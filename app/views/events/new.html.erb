<%= stylesheet_link_tag     'plugins/datapicker/datepicker3.css', 'data-turbolinks-track' => true %>
<%= javascript_include_tag "plugins/slimscroll/jquery.slimscroll.min.js", "plugins/datapicker/bootstrap-datepicker.js", 'data-turbolinks-track' => true %>
<script>
    $('#data_1 .input-group.date').datepicker({
        todayBtn: "linked",
        keyboardNavigation: false,
        forceParse: false,
        calendarWeeks: true,
        autoclose: true
    });
</script>
